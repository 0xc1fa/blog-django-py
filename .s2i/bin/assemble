#!/bin/bash

set -eo pipefail

# If a wheel directory is specified, the repository is being used as input
# to a wheelhouse build, to build Python wheels for required packages. In
# this case fall through to executing the original 'assemble' script.

if [ x"$PIP_WHEEL_DIR" != x"" ]; then
    exec /usr/libexec/s2i/assemble
fi

# Install 'powershift-cli[image]' package to add support for action hooks.

pip install powershift-cli[image]

# Run the build phase with support for action hooks.

exec powershift image assemble
